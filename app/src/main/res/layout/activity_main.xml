<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/arkaplan"
    tools:context="net.gulernet.app.encryption.MainActivity">

    <ScrollView
        android:id="@+id/svScroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/veri"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/veri"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="40dp"
        android:id="@+id/cevir" />

    <TextView
        android:text="MD5:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/md5yazi"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_below="@+id/cevir"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@+id/sha1"/>

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:focusable="false"
        android:textIsSelectable="true"
        android:ems="10"
        android:id="@+id/md5"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:text="SHA1:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sha1yazi"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:focusable="false"
            android:textIsSelectable="true"
            android:ems="10"
            android:id="@+id/sha1"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/md5yazi"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="SHA256:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sha256yazi"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:focusable="false"
            android:textIsSelectable="true"
            android:ems="10"
            android:id="@+id/sha256"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/md5yazi"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="SHA384:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sha384yazi"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:focusable="false"
            android:textIsSelectable="true"
            android:ems="10"
            android:id="@+id/sha384"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/md5yazi"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="SHA512:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sha512yazi"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:focusable="false"
            android:textIsSelectable="true"
            android:ems="10"
            android:id="@+id/sha512"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/md5yazi"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
